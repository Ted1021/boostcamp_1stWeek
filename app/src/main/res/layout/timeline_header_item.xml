<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#FFD3D3D3"

    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/background_light"
        android:padding="8dp"
        android:paddingTop="16dp"
        android:scrollbars="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ted" />

            <EditText
                android:id="@+id/editText_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="무슨 생각을 하고 계신가요?"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFF5F5F5"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_live"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"

                android:drawableLeft="@drawable/ic_live"
                android:drawablePadding="2dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="라이브"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/ic_gallery"
                android:drawablePadding="2dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="25dp"
                android:text="사진"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_checkin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/ic_pin"
                android:drawablePadding="2dp"
                android:gravity="left|center_vertical"


                android:paddingLeft="20dp"
                android:text="체크인"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
